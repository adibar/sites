<% resource.profile || resource.build_profile %>
<% resource.sites.build %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "create_user", :class => 'form-horizontal', :role => 'form'}) do |f| %>
  <%= devise_error_messages! %>

  <div id="error-msg" style="color:red;">

  </div>

  <%= f.fields_for :profile do |profile_form| %>
    <div class="form-group">
        <div class="col-sm-12">
          <%= profile_form.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
          <%= profile_form.text_field :family_name, :class => "form-control", :placeholder => "Family name" %>
        </div>
    </div>
  <% end %>

  <%= f.fields_for :sites do |site_form| %>
    <!-- <div class="form-group">
        <div class="col-sm-12">
          <%= site_form.text_field :name, :class => "form-control", :placeholder => "Site name" %>
        </div>
    </div> -->
    <%= site_form.hidden_field :name %>
    <!-- <div class="form-group">
        <div class="col-sm-12">
          <%= site_form.text_field :template_id, :class => "form-control", :placeholder => "template_id" %>
        </div>
    </div> -->
    <%= site_form.hidden_field :template_id %>
  <% end %>

  <div class="form-group">
      <div class="col-sm-12">
        <%= f.email_field :email, autofocus: false, :class => "form-control", :placeholder => "Email" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Type password again" %>
      </div>
  </div>

  <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit "Sign Up", :class => "btn btn-primary btn-lg", :style => "width:100%;" %>
      </div>
  </div>

<% end %>

<%= render "users/shared/links" %>
