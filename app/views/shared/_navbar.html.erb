<div class="container-fluid navbar-fixed-top site-header" style="z-index:101;">
  <div class="container">
    <div class="row" style="height:25px; line-height:25px;">
      <%= render "shared/language_dropdown" %>
    </div>
  </div>
</div>

<nav class="navbar navbar-default navbar-fixed-top site-menu" style="top:25px; z-index:100;">
  <!-- <div class="container-fluid"> -->
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="row">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- <a class="navbar-brand" href="#" style="padding-left:5px;">Picndo Sites</a> -->
        <%= link_to "Picndo Sites", {controller: "welcome", action: "index"}, class: "navbar-brand", style: "padding-left:5px;"%>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav" style="float:none;">
          <%= render 'navbar_list' %>
          <% if current_user %>
            <li class="dropdown" id="menuLogin" style="position:static; float:right;">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">
                <%= t('.hi')%> <%= current_user.profile.nil_or.full_name.nil_or.titleize || current_user.email %>
                <span class="caret"> </span>
              </a>
              <div class="dropdown-menu" style="width:100%;">
                <div class="container-fluid" style="padding-top:0px;">
                  <%= render "shared/user_dropdown" %>
                </div>
              </div>
            </li>
          <% else %>
            <li class="dropdown" id="menuLogin" style="position:static; float:right;">
              <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">
                <%= t('.login')%>
                <span class="caret"> </span>
              </a>
              <div class="dropdown-menu" style="width:100%;">
                <div class="container" style="padding-top:0px;">
                  <div class="col-sm-4" style="float:right;">
                    <h2><%= t('.login')%></h2>
                    <%= render :file => 'users/sessions/new' %>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </div><!-- /.container-fluid -->
</nav>